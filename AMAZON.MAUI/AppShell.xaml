<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AMAZON.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AMAZON.MAUI"
    xmlns:local1="clr-namespace:AMAZON.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AMAZON.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Inventory" 
        ContentTemplate="{DataTemplate local:InventoryPage}"
        Route="InventoryPage" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate local:ShopPage}"
        Route="ShopPage" />
    <ShellContent
        Title="InventoryDetails"
        ContentTemplate="{DataTemplate local1:InventoryDetailPage}"
        Route="InventoryDetailPage" />

</Shell>
