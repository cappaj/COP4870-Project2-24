<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AMAZON.MAUI.InventoryPage">

    <StackLayout>
        <ListView ItemsSource="{Binding InventoryItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Price}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Item" Command="{Binding AddItemCommand}" />
        <Button Text="Delete Item" Command="{Binding DeleteItemCommand}" />
    </StackLayout>

</ContentPage>


